{
    "manifest_version": 3,
    "name": "Beatonet",
    "version": "1.0.3",
    "permissions": [
        "webRequest"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://manager.eu.shadow.tech/*",
        "https://api.eu.shadow.tech/*",
        "https://app.deel.com/*",
        "https://api.deel.com/*"
    ],
    "icons": {
        "16":  "icons/icon16.png",
        "48":  "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
